<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flipperCheckIn"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/includeCheckInEvent"
        layout="@layout/include_check_in_event" />

    <include layout="@layout/shimmer_check_in_loading" />

    <TextView
        android:id="@+id/TvSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:text="@string/check_in_success"
        app:drawableTopCompat="@drawable/ic_success" />

    <TextView
        android:id="@+id/TvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="8dp"
        android:text="@string/check_in_error"
        app:drawableTopCompat="@drawable/ic_error" />
</ViewFlipper>